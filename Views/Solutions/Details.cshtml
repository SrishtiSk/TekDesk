@model TekDesk.Models.Solution

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Details</h1>

<div class="jumbotron">
    <h4>Solution</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Artifacts
        </dt>
        <dd class="col-sm-10">
            @{
                var artifact = @Model.Artifact ?? null;

                string Name = String.Empty;
                if (artifact != null)
                {
                    Name = artifact.Name;
                }
            }

            <a asp-controller="Download" asp-action="Download" asp-route-filename="@Name">@Name</a>

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Added)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Added)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Query)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Query.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
        <a asp-action="Index" asp-route-queryID="@Model.QueryID" class="btn btn-secondary">Back to List</a>
    </div>
</div>
