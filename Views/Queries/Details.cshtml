
@model TekDesk.Models.Query;

@{
    ViewData["Title"] = "Manage Query";
}


<div class="p-4 border jumbotron">
    <h4>Query</h4>
    <hr />
    <h5>Details</h5>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QState)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Added)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Added)
        </dd>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.QueryID" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.QueryID" class="btn btn-danger">Delete</a>
        @if (Model.QState == States.pending)
        {
            <a asp-action="Create" asp-controller="Solutions" asp-route-queryID="@Model.QueryID" class="btn btn-info">Give Solution</a>
        }
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Index" asp-controller="Solutions" asp-route-queryID="@Model.QueryID" class="btn btn-warning">View Solutions</a>
    </div>
</div>
